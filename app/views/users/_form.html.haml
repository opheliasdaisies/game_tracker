= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :username

  .field
    = f.label :password
    = f.password_field :password

  .field
    = f.label :gaming_handle
    = f.text_field :handle

  .field
    = f.label :email
    = f.email_field :email

  .field
    = f.label :bio
    = f.text_area :bio

  .actions
    = f.submit