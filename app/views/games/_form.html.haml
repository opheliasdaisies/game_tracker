= form_for(@game) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title

  .field
    = f.label :metascore_rating
    = f.number_field :rating, :max => 100

  .field
    = f.label :description
    = f.text_area :description

  .actions
    = f.submit